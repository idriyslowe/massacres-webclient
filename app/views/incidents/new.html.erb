  <div>
    <%= label_tag :murderer_first_name %>
    <%= text_field_tag :murderer_first_name%>
  </div>

  <div>
    <%= label_tag :murderer_last_name %>
    <%= text_field_tag :murderer_last_name%>
  </div>
    <div>
    <%= label_tag :birthdate %>
    <%= text_field_tag :birthdate%>
  </div>
    <div>
    <%= label_tag :location %>
    <%= text_field_tag :location%>
  </div>
    <div>
    <%= label_tag :weapon %>
    <%= text_field_tag :weapon%>
  </div>
    <div>
    <%= label_tag :number_of_victims %>
    <%= text_field_tag :number_of_victims%>
  </div>
    <div>
